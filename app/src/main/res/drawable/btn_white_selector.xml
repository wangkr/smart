<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:color="@color/white" android:width="1dp" />
            <corners android:radius="5dp"/>
            <gradient android:startColor="@color/white" android:endColor="@color/white" android:angle="90"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/gray_white" android:width="1dp" />
            <corners android:radius="5dp"/>
            <gradient android:startColor="@color/gray_white" android:endColor="@color/gray_white" android:angle="90"/>
        </shape>
    </item>
</selector>