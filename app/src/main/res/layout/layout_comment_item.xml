<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top|left">
        <!--头像-->
        <com.netease.nim.uikit.common.ui.imageview.HeadImageView
            android:id="@+id/comment_user_head"
            android:layout_width="@dimen/snap_msg_detail_comment_headsize"
            android:layout_height="@dimen/snap_msg_detail_comment_headsize"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <!--内容-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:gravity="top|left">
            <!--标题内容-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--昵称和时间-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="left">
                    <TextView
                        android:id="@+id/comment_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:maxWidth="100dp"
                        android:textColor="@color/theme_color"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/comment_reply_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comment_reply_hinttext"
                        android:textColor="@color/recentnews_msgType_comment"
                        android:layout_toRightOf="@id/comment_user_name"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:textSize="12sp"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/comment_bereplied_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="100dp"
                        android:textColor="@color/theme_color"
                        android:layout_toRightOf="@id/comment_reply_tag"
                        android:layout_toLeftOf="@+id/comment_in_time"
                        android:singleLine="true"
                        android:textSize="12sp"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/comment_in_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_white"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:gravity="top"
                        android:textSize="11sp"/>
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/comment_user_content"
                android:singleLine="false"
                android:gravity="left|center_vertical"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:textColor="@color/text_dark"
                android:background="@drawable/list_textitem_selector"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView >