<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/activity_camera_bar_bk"
    android:layout_alignParentTop="true"
    >

    <ImageView
        android:id="@+id/camera_cancell"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/close_icn2"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:divider="@drawable/divider_darkgradient"
        android:dividerPadding="20dp"
        android:showDividers="middle|beginning"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/flash_light"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_camera_icon_padding"
            android:src="@drawable/flash_light_icn_disabled"
            android:background="@drawable/select_item_background"/>
        <ImageView
            android:id="@+id/switch_camera"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_camera_icon_padding"
            android:src="@drawable/switch_camera"
            android:background="@drawable/select_item_background"/>
    </LinearLayout>

</RelativeLayout>