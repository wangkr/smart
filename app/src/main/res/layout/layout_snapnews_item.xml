<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="10dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="2dp"
    android:background="@drawable/nim_semitransparency_selector">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <com.netease.nim.uikit.common.ui.imageview.HeadImageView
            android:id="@+id/snap_news_headimage"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="@dimen/snap_msg_detail_comment_headsize"
            android:layout_height="@dimen/snap_msg_detail_comment_headsize"
            android:src="@drawable/joy_head_circle_default"
            />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/snap_news_headimage"
            android:layout_toLeftOf="@+id/snap_news_rightcontent"
            >
            <LinearLayout
                android:id="@+id/snap_news_centercontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:layout_gravity="right|top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/gray_white"
                android:id="@+id/snap_news_intime"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/snap_news_rightcontent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>