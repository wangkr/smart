<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <FrameLayout
        android:id="@+id/watch_snap_picture_activity_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <com.cqyw.smart.widget.squareprogressbar.SquareProgressBar
            android:id="@+id/watch_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <include layout="@layout/nim_watch_media_download_progress_layout" />

    </FrameLayout>

    <TextView
        android:id="@+id/counter_text"
        android:text="5"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/semi_theme_circle_bg"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:visibility="visible"/>
</RelativeLayout>