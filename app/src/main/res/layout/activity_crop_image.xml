<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3c3f41">
    <LinearLayout
        android:id="@+id/crop_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_crop_bar_height"
        android:background="@color/activity_crop_bar_bk"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑图片"
            android:textSize="20sp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <include layout="@layout/include_crop_image_bar"
        android:id="@+id/crop_bottom_bar"/>

    <RelativeLayout
        android:id="@+id/crop_CropImage_view"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </RelativeLayout>
</RelativeLayout>