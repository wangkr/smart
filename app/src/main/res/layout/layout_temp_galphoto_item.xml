<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/user_profile_gallery_columnWidth"
    android:layout_height="@dimen/user_profile_gallery_columnWidth">
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"/>
    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:divider="@drawable/divider_black"
        android:showDividers="middle"
        android:orientation="horizontal"
        android:dividerPadding="1.5dip"
        android:background="#55000000">
        <ImageView
            android:id="@+id/chang_picture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/change_icn"
            android:background="@drawable/list_item_bg_selecter"/>
        <ImageView
            android:id="@+id/delete_picture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/delete_icn"
            android:padding="8dp"
            android:background="@drawable/list_item_bg_selecter"/>
    </LinearLayout>
</FrameLayout>