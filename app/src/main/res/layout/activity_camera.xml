<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <SurfaceView
        android:id="@+id/sufaceview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <include layout="@layout/include_camera_top_bar"
        android:id="@+id/camera_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>


    <ImageView
        android:id="@+id/focus_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:src="@drawable/focus_icn"
        android:visibility="gone"/>
    <!-- 拍照工具栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_camera_bottom_bar_height"
        android:layout_alignParentBottom="true"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:background="@color/activity_camera_bar_bk">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <!-- 拍照按钮背景-->
            <com.cqyw.smart.widget.circleview.CircleImageView
                android:layout_width="@dimen/activity_camera_bottom_bar_shutter_bg_size"
                android:layout_height="@dimen/activity_camera_bottom_bar_shutter_bg_size"
                android:layout_centerInParent="true"
                app:border_color="#c2c2c2"
                android:src="#555555"
                app:border_width="4dp"
                />
            <!-- 拍照按钮前景-->
            <com.cqyw.smart.widget.circleview.CircleButton
                android:id="@+id/shutter"
                android:layout_width="@dimen/activity_camera_bottom_bar_shutter_fg_size"
                android:layout_height="@dimen/activity_camera_bottom_bar_shutter_fg_size"
                android:layout_centerInParent="true"
                app:cb_color="#c2c2c2"
                app:cb_pressedRingWidth="4dp"/>
        </RelativeLayout>


        <com.cqyw.smart.widget.circleview.CircleImageView
            android:id="@+id/gallery"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            app:border_color="@android:color/white"
            app:border_width="1dip"
            android:src="@mipmap/ic_launcher"/>


        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@id/gallery"
            android:layout_alignStart="@id/gallery"
            android:layout_alignEnd="@id/gallery"
            android:layout_alignRight="@id/gallery"
            android:layout_below="@id/gallery"
            android:text="相册"
            android:textColor="@color/theme_color"
            android:textSize="12sp"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:gravity="center_horizontal">
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>