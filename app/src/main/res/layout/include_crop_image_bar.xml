<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_crop_bar_height"
    android:layout_alignParentBottom="true"
    android:background="@color/activity_crop_bar_bk"
    android:divider="@drawable/divider_darktheme"
    android:gravity="center_vertical"
    android:showDividers="middle">

    <ImageView
        android:id="@+id/crop_bar_cancell"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:src="@drawable/close_icn3"
        android:layout_weight="1"
        android:background="@drawable/semitransparent_black_bg"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:divider="@drawable/divider_darkgradient"
        android:showDividers="middle"
        android:dividerPadding="15dp"
        android:gravity="center_vertical">
        <RelativeLayout
            android:id="@+id/crop_bar_crop_menu"
            android:layout_width="0dp"
            android:padding="15dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/semitransparent_black_bg">
            <ImageView
                android:id="@+id/crop_bar_w3h4_ratio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/w3h4_icn"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/crop_bar_orgin_ratio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="原图"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:visibility="gone"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/crop_bar_rotate_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_weight="1"
            android:background="@drawable/semitransparent_black_bg">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rotate_icn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90"
                android:textColor="@drawable/white_text_drawable"
                android:textSize="13sp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/crop_bar_ok"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:src="@drawable/ok_icn"
        android:layout_weight="1"
        android:background="@drawable/semitransparent_black_bg"/>

</LinearLayout>