<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/actionBar_height"
    android:theme="@android:style/Theme.NoTitleBar"
    android:background="@drawable/actionbar_bg"
    android:paddingRight="5dp"
    android:paddingLeft="5dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:src="@drawable/joy_logo"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"/>
    <!-- 好友提示按钮-->
    <RelativeLayout
        android:id="@+id/friend_msg_layout"
        android:layout_width="44dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >
        <ImageView
            android:id="@+id/btn_main_friend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/btn_friend"
            />
        <com.cqyw.smart.widget.circleview.CircleImageView
            android:id="@+id/friend_tips_dot"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/red_dot"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            app:border_color="#fffafa"
            app:border_width="1px"
            />

    </RelativeLayout>

    <!-- 消息提示按钮-->
    <RelativeLayout
        android:layout_width="44dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/friend_msg_layout"
        android:layout_centerVertical="true"
        >
        <ImageView
            android:id="@+id/btn_main_tips"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/btn_tips"
            />
        <com.cqyw.smart.widget.circleview.CircleImageView
            android:id="@+id/tips_tips_dot"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/red_dot"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            app:border_color="#FFFAFA"
            app:border_width="1px"
            />

    </RelativeLayout>
</RelativeLayout>