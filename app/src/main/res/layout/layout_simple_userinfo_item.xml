<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:padding="8dp">
    <com.netease.nim.uikit.common.ui.imageview.HeadImageView
        android:id="@+id/simple_head"
        android:layout_width="@dimen/avatar_size_in_alljousers"
        android:layout_height="@dimen/avatar_size_in_alljousers"
        android:src="@drawable/head_sample"/>
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/simple_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_size_12"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
        <LinearLayout
            android:layout_below="@id/simple_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/simple_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_dark"
                android:textSize="@dimen/text_size_12"/>
            <TextView
                android:id="@+id/simple_university"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_dark"
                android:textSize="@dimen/text_size_12"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/simple_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/text_gray_dark"
                android:layout_gravity="center"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/simple_addfriend"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_smallcorner_theme_bg"
                android:text="加为好友"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/white"
                android:gravity="center"
                android:visibility="visible"/>
        </FrameLayout>

    </RelativeLayout>
</LinearLayout>