<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/crop_pop_pensize_layout_height"
    android:padding="10dp"
    android:background="@drawable/joy_cam_rounded_stroke_theme_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="调整【模糊擦除】笔头大小"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:textColor="@color/joy_theme_color"/>

    <ImageView
        android:id="@+id/pen_size_view"
        android:layout_width="100px"
        android:layout_height="100px"
        android:maxHeight="300dp"
        android:maxWidth="300dp"
        android:minWidth="10px"
        android:minHeight="10px"
        android:background="@drawable/pen_size_icn"
        android:layout_centerInParent="true"
        />
    <SeekBar
        android:id="@+id/seekBar_pen_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="1000"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>