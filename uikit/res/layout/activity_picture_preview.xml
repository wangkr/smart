<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/preview_text_et"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:singleLine="false"
        android:maxLines="10"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/text_gray_dark"
        android:hint="三言两语描述一下..."
        android:textColorHint="#cccccccc"
        android:padding="3dp"
        android:gravity="top|left"
        android:background="@drawable/nim_bg_edittext_rectangle"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/preview_image_iv"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/cover_image_iv"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cover_others1"
            android:visibility="visible"/>
        <CheckBox
            android:id="@+id/message_type"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="阅后即焚"
            android:textColor="@color/color_b3b3b3"
            android:layout_toRightOf="@id/preview_image_iv"
            />
        <Button
            android:id="@+id/more_cover_bt"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textColor="@color/text_dark"
            android:text="更多封面"
            android:layout_toRightOf="@id/preview_image_iv"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:visibility="gone"
            />
    </RelativeLayout>


</LinearLayout>